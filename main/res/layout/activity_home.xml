<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#007B7F" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#007B7F"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_main"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.example.utsha.epocket.Home">

            <Button
                android:text="ABOUT ME"
                android:onClick="showme"
                android:soundEffectsEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape"
                android:id="@+id/button3"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/button2"
                android:layout_alignLeft="@+id/button2"
                android:layout_alignStart="@+id/button2"
                android:textColor="@android:color/background_light"
                android:textStyle="normal|bold" />

            <Button
                android:text="Clear All Data"
                android:soundEffectsEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/button"
                android:layout_alignLeft="@+id/button"
                android:background="@drawable/button_shape"
                android:layout_alignStart="@+id/button"
                android:textColor="@android:color/background_light"
                android:textStyle="normal|bold"
                android:onClick="clearalldata" />

            <Button
                android:soundEffectsEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button1"
                android:text="ADD SUBJECTS"
                android:onClick="addsubjects"
                android:layout_marginTop="68dp"
                android:background="@drawable/button_shape"
                android:textColor="@android:color/background_light"
                android:textStyle="normal|bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:soundEffectsEnabled="false"
                android:text="ADD/SHOW PERCENTAGE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:onClick="showdata"
                android:layout_marginTop="13dp"
                android:background="@drawable/button_shape"
                android:textColor="@android:color/background_light"
                android:textStyle="normal|bold"
                android:layout_below="@+id/button1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:text="EXIT"
                android:onClick="exitMethod"
                android:soundEffectsEnabled="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape"
                android:layout_marginTop="18dp"
                android:id="@+id/buttonx"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_light"
                android:layout_below="@+id/button3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
