<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#007B7F">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_main2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.example.utsha.epocket.Input"
            android:weightSum="1">

            <Space
                android:layout_width="fill_parent"
                android:layout_height="100dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:inputType="text"
                android:ems="10"
                android:background="@color/colorPrimary"
                android:id="@+id/editText1"
                android:hint="SUBJECT 1"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@android:color/white"
                android:selectAllOnFocus="false"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_weight="0.45"
                />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:inputType="text"
                android:ems="10"
                android:background="@color/colorPrimary"
                android:id="@+id/editText2"
                android:hint="SUBJECT 2"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@android:color/background_light"
                android:selectAllOnFocus="false"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_weight="0.45"
                android:textAllCaps="true" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:inputType="text"
                android:ems="10"
                android:background="@color/colorPrimary"
                android:id="@+id/editText3"
                android:hint="SUBJECT 3"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@android:color/white"
                android:selectAllOnFocus="false"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_weight="0.45"
                />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:inputType="text"
                android:ems="10"
                android:background="@color/colorPrimary"
                android:id="@+id/editText4"
                android:hint="SUBJECT 4"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@android:color/white"
                android:selectAllOnFocus="false"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_weight="0.45"
                />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:inputType="text"
                android:ems="10"
                android:background="@color/colorPrimary"
                android:id="@+id/editText5"
                android:hint="SUBJECT 5"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@android:color/white"
                android:selectAllOnFocus="false"
                android:textSize="18sp"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_weight="0.45"
                />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="40dp" />

            <Button
                android:text="SAVE"
                android:soundEffectsEnabled="false"
                android:onClick="saveas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:background="@drawable/button_shape"
                android:layout_marginRight="120dp"
                android:id="@+id/buttonsave"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_light" />



        </LinearLayout>
    </ScrollView>
</RelativeLayout>
